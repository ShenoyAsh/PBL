# Server Port
PORT=5001

# MongoDB Connection String (replace with your own)
MONGODB_URI=mongodb://127.0.0.1:27017/lifelink

# JWT Secret (for future admin auth)
JWT_SECRET=your_jwt_secret_key_here

# Admin API Key (for secure Excel import/export)
ADMIN_API_KEY=your_strong_random_api_key_for_excel_imports

# Nodemailer SMTP Credentials (e.g., Mailtrap.io)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_password
EMAIL_FROM="LifeLink Support <support@lifelink.com>"

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000